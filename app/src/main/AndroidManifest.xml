<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiniPriceApp"
        tools:targetApi="31">

        <activity
            android:name=".CatalogActivity"
            android:exported="true"
            android:theme="@style/Theme.MiniPriceApp" />

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.MiniPriceApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MiniPriceApp" />

        <activity
            android:name=".ProductsActivity"
            android:exported="false"
            android:theme="@style/Theme.MiniPriceApp" />

        <activity
            android:name=".CartActivity"
            android:exported="false"
            android:theme="@style/Theme.MiniPriceApp" />

        <activity
            android:name=".OrdersHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.MiniPriceApp" />

        <activity
            android:name=".OrderDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.MiniPriceApp" />

        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.MiniPriceApp" />

        <activity
            android:name=".AddressActivity"
            android:exported="false"
            android:theme="@style/Theme.MiniPriceApp" />

        <activity
            android:name=".CanceledOrdersActivity"
            android:exported="false"
            android:theme="@style/Theme.MiniPriceApp" />

        <activity
            android:name=".FilteredOrdersActivity"
            android:exported="false"
            android:theme="@style/Theme.MiniPriceApp" />

        <activity
            android:name=".RequestProductActivity"
            android:exported="false"
            android:theme="@style/Theme.MiniPriceApp" />

        <activity
            android:name=".ViewRequestsActivity"
            android:exported="false"
            android:theme="@style/Theme.MiniPriceApp" />

    </application>

</manifest>
